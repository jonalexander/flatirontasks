<!-- cohort show, instructor dash -->

<h2><%=@cohort.name.capitalize%></h2>
<h3>Students</h3>
<ul>
<% @cohort.students.each do |student| %>
  <li><%= student.name %></li>
<%end%>
</ul>

<h3>Previous Assignments</h3>
  <% @cohort.assignments.each do |assignment| %>
    <%= link_to assignment.name, "/assignments/status/#{assignment.id}/#{@cohort.id}"%>
  <% end %>

