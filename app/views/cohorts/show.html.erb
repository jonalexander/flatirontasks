<h3>Here are all your students in <%=@cohort.name%></h3>
<%@cohort.students.each do |student|%>
<%=student.name%>
<%end%>

<h3>Here are your previous Assignments</h3>
<%@cohort.assignments.each do |assignment| %>
<%= link_to assignment.name, "/assignements/status/#{assignment.id}/#{@cohort.id}"%>
<%end%>


<h3>Create an Assignment for your <%=@cohort.name%></h3>
<%= form_for @assignment do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description %><br>

  <%= f.label :time %><br>
  <%= f.number_field :time %><br>

  <%= f.label :priority %><br>
  <%= f.number_field :priority %><br>
  <%= f.hidden_field :cohort_id, :value => @cohort.id %>
  <%= f.submit "Submit"%>
  <%end%>

