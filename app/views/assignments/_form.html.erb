<%= form_for @assignment do |f| %>
 <%= f.label :name %><br>
 <%= f.text_field :name %><br>

 <%= f.label :description %><br>
 <%= f.text_area :description %><br>

 <%= f.label :time %><br>
 <%= f.number_field :time %><br>

 <%= f.label :priority %><br>
 <%= f.number_field :priority %><br>
 <%= f.hidden_field :cohort_id, :value => @cohort.id %>
 <br>
 <%= f.submit "Submit"%>
<%end%>
