<%= form_for @assignment do |f| %>
 <%= f.label :name %><br>
 <%= f.text_field :name %><br>

 <%= f.label :description %><br>
 <span id="create_ass_desc"><%= f.text_area :description %><br><span>

 <%= f.label :time %><br>
 <%= f.number_field :time, in: 1..8 %><br>

 <%= f.label :priority %><br>
 <%= f.number_field :priority, in: 1..8 %><br>
 <%= f.hidden_field :cohort_id, :value => @cohort.id %>
 <br>
 <%= f.submit "Submit"%>
<%end%>
