<h1><%= @assignment.name %></h1>
<%= @assignment.name %>
<%= @assignment.description %>
<%= @assignment.time%>

<h2>Here are the student statuses</h2>
<%@assignment.statuses(@cohort).each do |student|%>
<ul>
  <% if student[1] == false %>
    <li><%= "#{student[0]}: incomplete" %></li>
  <% else %>
    <li><%= "#{student[0]}: completed"%></li>
  <% end %>
  </ul>
<%end%>

<%= render 'comments/form' %>
<%= render @assignment.comments %>
