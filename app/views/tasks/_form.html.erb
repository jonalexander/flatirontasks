<div class="well well-sm">
   <h4>Add Task<h4>
</div>
<%= form_for(@task) do |f| %>

   <%= f.label :name %>
   <%= f.text_field :name %><br>

   <%= f.label :description %>
   <%= f.text_field :description %><br>

   <%= f.label :priority %>
   <%= f.number_field :priority, in: 1..5 %><br>

   <%= f.label :time %>
   <%= f.number_field :time, in: 1..8 %><br>

   <%= f.hidden_field :student_id, :value => @student.id %>
   <%= f.submit %>
<% end %>
