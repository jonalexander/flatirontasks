<table>
  <% @student.tasks_and_assignments.each do |item| %>
    <tr>
      <% if item.is_a?(Assignment) %>
          <td> <%= link_to item.name, assignment_path(item) %></td>
          <td> <%= item.description %> </td>
          <td> <%= item.time %> </td>
          <td> <%= @student.assignment_status(item) %> </td>
          <td> <%= link_to 'Done', complete_assignment_path(:assignment =>{:assignment_id => item.id}) %> </td>
      <% elsif item.is_a?(Task) %>
          <td><%= link_to item.name, task_path(item)%></td>
          <td> <%= item.description %> </td>
          <td> <%= item.time %> </td>
          <td> <%= item.status %></td>
          <td> <%= link_to 'Done', complete_task_path(:task =>{:task_id => item.id}) %> </td>
        <% end %>
    </tr>
  <% end %>
</table>
